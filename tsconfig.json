{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "outDir": "./lib"
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": []
}
